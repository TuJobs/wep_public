<%= form_for @post do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".new_post") %>
  </div>
  <%= f.submit t(".post"), class: "btn btn-primary" %>
  <span class="picture" data-attribute = "<%= Settings.picture.size %>">
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>
